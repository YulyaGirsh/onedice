{
  "name": "telegram-mini-app-example",
  "version": "1.0.0",
  "description": "Пример Telegram Mini App с использованием @twa-dev инструментов",
  "main": "index.js",
  "scripts": {
    "start": "vite --host",
    "dev": "vite --host",
    "dev:https": "vite --host --https",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "server": "cd server && npm start",
    "bot": "python main-simple.py"
  },
  "dependencies": {
    "@lottiefiles/dotlottie-react": "^0.14.4",
    "@tonconnect/sdk": "^3.2.0",
    "@tonconnect/ui": "^2.2.0",
    "@twa-dev/mark42": "^0.0.38",
    "@twa-dev/sdk": "^8.0.2",
    "@twa-dev/types": "^8.0.1",
    "lottie-web": "^5.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "keywords": [
    "telegram",
    "mini-app",
    "twa",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
